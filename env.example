# NutrieDiet Go - Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Server port
PORT=8080

# Gin mode: debug, release
GIN_MODE=debug

# ==============================================================================
# DATABASE SETTINGS
# ==============================================================================

# For Development (or if using Aiven cloud database)
DB_USER=avnadmin
DB_PASSWORD=AVNS_7QDxgZDlRhQXAx3QV4z
DB_HOST=nutriediet-mysql-ishitagupta-5564.f.aivencloud.com
DB_PORT=22013
DB_NAME=defaultdb

# For Production on Digital Ocean (MySQL on same machine)
# DB_USER=nutriediet_app
# DB_PASSWORD=your_strong_password_here
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=nutriediet_production

# ==============================================================================
# JWT CONFIGURATION
# ==============================================================================

# Generate a secure key with: openssl rand -base64 64
# CRITICAL: Must be at least 32 characters
JWT_SECRET_KEY=your_very_long_random_secret_key_minimum_64_characters

# Token expiration settings
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h

# ==============================================================================
# SMTP EMAIL CONFIGURATION
# ==============================================================================

# Gmail SMTP (recommended for testing/small scale)
SMTP_EMAIL=nutriediet.help@gmail.com
SMTP_PASSWORD=your_16_character_gmail_app_password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# ==============================================================================
# CORS CONFIGURATION
# ==============================================================================

# Comma-separated list of allowed origins
# Development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Production - replace with your actual domains
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://nutriediet.netlify.app

# ==============================================================================
# RATE LIMITING
# ==============================================================================

# Login/Auth endpoints: requests per minute
RATE_LIMIT_AUTH=5

# API endpoints: requests per minute
RATE_LIMIT_API=100

# General endpoints: requests per minute
RATE_LIMIT_GENERAL=200

# Time window (e.g., 1m, 5m, 1h)
RATE_LIMIT_WINDOW=1m

# ==============================================================================
# LOGGING
# ==============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=debug

# Log format: text, json
LOG_FORMAT=text

# Log file path (leave empty to log to stdout)
LOG_FILE=

# For production:
# LOG_LEVEL=info
# LOG_FORMAT=json
# LOG_FILE=/opt/nutriediet/logs/app.log

# ==============================================================================
# NOTES FOR DIGITAL OCEAN DEPLOYMENT
# ==============================================================================
# 
# 1. Create a local MySQL database on your droplet
# 2. Set DB_HOST=localhost for local database
# 3. Generate a strong JWT_SECRET_KEY: openssl rand -base64 64
# 4. Use your actual domain in ALLOWED_ORIGINS
# 5. Set ENVIRONMENT=production
# 6. Set GIN_MODE=release
# 7. Configure proper LOG_FILE path
# 8. Never use skip-verify for TLS in production
#
# Quick Setup: cp env.example .env (then edit .env with your values)

